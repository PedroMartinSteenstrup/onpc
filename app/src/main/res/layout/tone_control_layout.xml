<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:tag="tone_label"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dashed_string" />

        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/ImageButtonSecondaryStyle"
            android:tag="tone_extended_cmd"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:tag="tone_min_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashed_string" />

        <androidx.appcompat.widget.AppCompatSeekBar
            style="@style/SegBarStyle"
            android:tag="tone_progress_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:min="0" />

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:tag="tone_max_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashed_string" />
    </LinearLayout>

</merge>