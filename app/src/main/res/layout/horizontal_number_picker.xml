<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        style="@style/EditFieldCaptionStyle"
        android:id="@+id/label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:maxLines="9999" />

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/ImageButtonPrimaryStyle"
        android:id="@+id/button_decrease"
        android:contentDescription="@string/number_picker_decrease"
        android:src="@drawable/number_picker_decrease" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/PrimaryTextViewStyle"
            android:id="@+id/edit_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:minWidth="48dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/ImageButtonPrimaryStyle"
        android:id="@+id/button_increase"
        android:contentDescription="@string/number_picker_increase"
        android:src="@drawable/number_picker_increase" />

</merge>