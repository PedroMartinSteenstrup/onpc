<com.mkulesh.onpc.widgets.CheckableItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            style="@style/PrimaryTextViewStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/checkable_text" />

        <TextView
            style="@style/SecondaryTextViewStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/checkable_description" />

    </LinearLayout>

    <CheckedTextView
        android:id="@+id/checkable_checkbox"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="@dimen/draggable_row_height" />
</com.mkulesh.onpc.widgets.CheckableItemView>
